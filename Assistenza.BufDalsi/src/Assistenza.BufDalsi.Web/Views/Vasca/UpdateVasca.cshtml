@model Assistenza.BufDalsi.Web.Models.VascaViewModels.UpdateVascaViewModel


<div class="modal-header modal-header-custom">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div>
    <form asp-controller="Vasca" asp-action="UpdateVasca" method="post">
        <div class="dati">
            <div class="form-group">
                <label class="control-label">Nome</label><br />
                <input type="text" class="form-control" id="nomeVasca" maxlength="70" rows="1" cols="50" placeholder="Nessun Nome" asp-for="@Model.vsc_Nome"><br />
            </div>
            <div class="form-group">
                <label class="control-label">Altezza </label>
                <input type="text" step="any" pattern="[0-9]{1,2}([,][0-9]{1,3})?" title="L'altezza può assumere valori da 1 a 99 metri  con max 3 cifre significative dopo la virgola." class="form-control" asp-for="@Model.vsc_Altezza" /><br />
            </div>
            <div class="form-group">
                <label class="control-label">Coperta </label>
                <input type="checkbox" asp-for="@Model.vsc_Coperta" /><br />
            </div>
            <div class="form-group">
                <label class="control-label">Riscaldata </label>
                <input type="checkbox" asp-for="@Model.vsc_Riscaldata" /><br />
            </div>
            <div class="form-group">
                <label class="control-label">Recupero </label>
                <input type="checkbox" asp-for="@Model.vsc_Recupero" /><br />
            </div>
            <div class="form-group">
                <label class="control-label">Interrata </label>
                <input type="checkbox" id="interratacbx" checked="checked" asp-for="@Model.vsc_Interrata" /><br />
            </div>
            <div class="form-group" id="interratadiv" hidden>
                <label class="control-label">Interramento :</label>
                <input type="text" step="any" title="L'interramento puo' assumere valori da 0 a 50 metri con max 3 cifre significative dopo la virgola." pattern="[0-9]{1,2}([,][0-9]{1,3})?"
                       class="form-control" asp-for="@Model.vsc_Interramento" /><br />
            </div>
            <div class="form-group">
                <label class="control-label">Numero Soffiantine :</label>
                <input type="number" min="0" max="100" title="Le soffiantine possono assumere il massimo valore  di 100." class="form-control" asp-for="@Model.vsc_NSoffiantine" /><br />
            </div>
            <div class="form-group">
                <label class="control-label">Diametro </label>
                <input type="text" step="any" pattern="[0-9]{1,2}([,][0-9]{1,3})?" title="Il diametro della vasca può assumere valori compresi tra 1 e 100 metri  con max 3 cifre significative dopo la virgola." class="form-control" asp-for="@Model.vsc_Diametro" /><br />
            </div>
            <input type="hidden" value="@Model.clt_id" asp-for="@Model.clt_id" />
            <input type="hidden" value="@Model.ipt_Id" asp-for="@Model.ipt_Id" />
            <input type="hidden" value="@Model.vsc_Impianto" asp-for="@Model.vsc_Impianto" />
            <input type="hidden" value="@Model.vsc_Id" asp-for="@Model.vsc_Id"/>
                    <button id="invia" asp-action="UpdateVasca" type="submit" class="btn btn-primary">Modifica</button>
        </div>
    </form>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        if ($("#interratacbx").is(":checked")) {
            $("#interratadiv").show();
        } else {
            $("#interratadiv").hide();
        }
        $('#interratacbx').click( function () {
            if ($(this).is(":checked")) {
                $("#interratadiv").show();
            } else{
                $("#interratadiv").hide();
            }

        });
    });
</script>