@model Assistenza.BufDalsi.Web.Models.SensoreViewModels.UpdateSensoreViewModel


<div class="modal-header modal-header-custom">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div>

    <form asp-controller="Sensore" asp-action="UpdateSensore" method="post">
        <div class="dati">
            <div class="form-group">
                <label class="control-label">Nome :</label>
                <input type="text" class="form-control" maxlength="70" asp-for="@Model.ssr_Nome" /><br />
            </div>
            <div class="form-group">
                <label class="control-label">Marca :</label>
                <input type="text" class="form-control" maxlength="70" asp-for="@Model.ssr_Marca" /><br />
            </div>
            <div class="form-group">
                <label class="control-label">Modello :</label>
                <input type="text" class="form-control" maxlength="70" asp-for="@Model.ssr_Modello" /><br />
            </div>
            <div class="form-group">
                <label class="control-label">Serie :</label>
                <input type="text" class="form-control" maxlength="70" asp-for="@Model.ssr_Serie" /><br />
            </div>
            <div class="form-group">
                <label class="control-label">UltimaInstallazione :</label>
                @{ //preparo il valore del datepicker contenente solo la data
                    string us = @Model.ssr_UltimaInstallazione.Day.ToString().PadLeft(2, '0') + "/" + Model.ssr_UltimaInstallazione.Month.ToString().PadLeft(2, '0') + "/" + Model.ssr_UltimaInstallazione.Year.ToString();
                }
                <input type="text" class="data form-control" value="@us" pattern="(19|20)\d\d[- /.](0[1-9]|1[012])[- /.](0[1-9]|[12][0-9]|3[01])"  asp-for="@Model.ssr_UltimaInstallazione" /><br />
            </div>
            <input type="hidden" value="@Model.ssr_Vasca" asp-for="@Model.ssr_Vasca" />
            <input type="hidden" value="@Model.ipt_Id" asp-for="@Model.ipt_Id" />
            <input type="hidden" value="@Model.clt_id" asp-for="@Model.clt_id" />
            <input type="hidden" value="@Model.ssr_Id" asp-for="@Model.ssr_Id" />
                    <button id="invia" asp-action="UpdateSensore" type="submit" class="btn btn-primary">Modifica</button>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    $(document).ready(function () {
        $('.data').datepicker({
            format: "yyyy/mm/dd",
            todayBtn: "linked",
            language: "it",
            orientation: "auto",
            autoclose: true,
            startDate: "1900/01/01",
            endDate: "2500/01/01"
        });
    });
</script>