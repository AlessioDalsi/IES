@using Assistenza.BufDalsi.Web.Data
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@if (User.IsInRole("Admin"))
{
    <div class="panel panel-default text-box">
        <h1>Benvenuto @User.Identity.Name</h1>
    </div>
}
else if (User.IsInRole("Operator"))
{
    <div class="panel panel-default text-box">
        <h1>Benvenuto @User.Identity.Name</h1>
    </div>
}
else if (User.IsInRole("User"))
{
    <div class="panel panel-default text-box">
        <h1>Benvenuto @User.Identity.Name</h1>
    </div>
}
else
{
    <div class="row">
        <div>
            <div class="loginmodal-container">
                <div align="center">
                    <img src="~/Images/AAEAAQAAAAAAAAluAAAAJGM5MWMzZTQ0LTE0ODctNGM0YS05MTk4LTFhYTVhODA1ZTU4NA copy.png">
                </div>
                <h1>Log In</h1>
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="UserName" placeholder="Username" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="login loginmodal-submit" value="Log in">
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
