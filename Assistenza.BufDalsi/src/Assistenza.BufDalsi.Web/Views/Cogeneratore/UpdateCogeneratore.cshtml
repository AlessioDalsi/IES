@model Assistenza.BufDalsi.Web.Models.CogeneratoreViewModels.UpdateCogeneratoreViewModel

<div class="modal-header modal-header-custom">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<div>
    <form asp-controller="Cogeneratore" asp-action="UpdateCogeneratore" method="post">
        <div class="dati">
            <div class="form-group">
                <label class="control-label">Marca: </label>
                <input type="text" class="form-control" maxlength="70" asp-for="@Model.cgn_Marca"/><br/>
            </div>

            <div class="form-group">
                <label class="control-label">Modello: </label>
                <input type="text" class="form-control" maxlength="70" asp-for="@Model.cgn_Modello" /><br/>
            </div>

            <div class="form-group">
                <label class="control-label">Serie: </label>
                <input type="text" class="form-control" maxlength="70" asp-for="@Model.cgn_Serie" /><br/>
            </div>

            <div class="form-group">
                <label class="control-label">Potenza(kW): </label>
                <input type="number" min="0" class="form-control" asp-for="@Model.cgn_Potenza" />
            </div>

            <input type="hidden" value="@Model.clt_id" asp-for="@Model.clt_id" />
            <input type="hidden" value="@Model.ipt_Id" asp-for="@Model.ipt_Id" />
            <input type="hidden" value="@Model.cgn_Id" asp-for="@Model.cgn_Id" />
            <input type="hidden" value="@Model.cgn_Impianto" asp-for="@Model.cgn_Impianto" />
            <div class="form-group add">
                <button id="invia" asp-action="UpdateCogeneratore" type="submit" class="btn btn-primary centra-impianti">Aggiorna</button>
            </div>
        </div>
    </form>
</div>