@model Assistenza.BufDalsi.Web.Models.CogeneratoreViewModels.InsertCogeneratoreViewModel


<div class="modal-header modal-header-custom">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="dati">
    <form asp-controller="Cogeneratore" asp-action="InsertCogeneratore" id="frm">
        <div class="form-group">
            <label class="control-label">Marca :</label>
            <input id="marca" required type="text" class="form-control" maxlength="70" asp-for="@Model.cgn_Marca" /><br />

        </div>
        <div class="form-group">
            <label class="control-label">Modello :</label>
            <input type="text" class="form-control" maxlength="70" asp-for="@Model.cgn_Modello" /><br />
        </div>
        <div class="form-group">
            <label class="control-label">Serie :</label>
            <input type="text" class="form-control" maxlength="70" asp-for="@Model.cgn_Serie" /><br />
        </div>
        <div class="form-group">
            <label class="control-label">Potenza(kW) :</label>
            <input type="number" min="0" class="form-control" asp-for="@Model.cgn_Potenza" /><br />
        </div>

        <input type="hidden" value="@Model.clt_Id" asp-for="@Model.clt_Id" />
        <input type="hidden" value="@Model.ipt_Id" asp-for="@Model.ipt_Id" />
        <input type="hidden" value="@Model.ipt_Id" asp-for="@Model.cgn_Impianto" />

        <button asp-action="InsertCogeneratore" id="validate" type="submit" class="btn btn-primary">Inserisci</button>
    </form>
</div>
