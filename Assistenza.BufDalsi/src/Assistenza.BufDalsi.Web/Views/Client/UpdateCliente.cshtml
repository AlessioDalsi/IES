@model Assistenza.BufDalsi.Web.Models.ClientViewModels.UpdateClienteViewModel

<div class="modal-header modal-header-custom">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div>

    <form asp-controller="Client" asp-action="UpdateCliente">
        <div class="dati">
            <div class="form-group">
                <label class="control-label">RagioneSociale :</label>
                <input type="text" class="form-control" maxlength="70" asp-for="@Model.clt_RagioneSociale" required  /><br />
            </div>
            <div class="form-group">
                <label class="control-label">Indirizzo  :</label>
                <input type="text" class="form-control" maxlength="70" asp-for="@Model.clt_Indirizzo"/><br />
            </div>
            <div class="form-group">
                <label class="control-label">Telefono :</label>
                <input type="text" class="form-control" maxlength="70" asp-for="@Model.clt_Telefono"  /><br />
            </div>
            <div class="form-group">
                <label class="control-label">Cellulare :</label>
                <input type="text" class="form-control" maxlength="70" asp-for="@Model.clt_Mobile"/><br />
            </div>
            <div class="form-group">
                <label class="control-label">Mail :</label>
                <input type="email" class="form-control" maxlength="70" asp-for="@Model.clt_Mail"  /><br />
            </div>
            <input type="hidden" value="@Model.clt_Id" asp-for="@Model.clt_Id" />
            <div class="form-group add">
                <button id="invia" asp-action="UpdateCliente" type="submit" class="btn btn-primary">Modifica</button>
            </div>

        </div>
    </form>
</div>
