@using Microsoft.AspNetCore.Identity
@using Assistenza.BufDalsi.Web.Models
@using Assistenza.BufDalsi.Web.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="SignOff" method="post" id="logoutForm">
        <ul class="nav navbar-nav navbar-right">
            <li class="menu">
                <a asp-area="" title="Manage">Benvenuto @UserManager.GetUserName(User)</a>
            </li>
            <li class="menu">
                <button type="submit" class="btn btn-link navbar-btn" >Log off</button>
            </li>
        </ul>
    </form>
}
