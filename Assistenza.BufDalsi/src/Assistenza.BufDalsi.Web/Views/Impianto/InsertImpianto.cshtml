@model Assistenza.BufDalsi.Web.Models.ImpiantoViewModels.InsertImpiantoViewModel

<div class="modal-header modal-header-custom">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div>
    <form asp-controller="Impianto" asp-action="InsertImpianto" method="post">
        <h2 class="section-title">Inserimento impianto</h2>
        <div class="dati">

            <div class="form-group">
                <label class="control-label">Ragione sociale:</label><br />
                <input required type="text" class="form-control" maxlength="100" asp-for="@Model.imp.ipt_RagioneSociale" />
            </div>

            <div class="form-group">
                <label class="control-label">Potenza nominale:</label><br />
                <input type="number" class="form-control" min="0" required asp-for="@Model.imp.ipt_PotenzaNominale" />
            </div>

            <div class="form-group">
                <label for="exampleSelect1">Cliente:</label>
                <select class="form-control" asp-for="@Model.imp.ipt_Cliente">
                    @foreach (var c in Model.clientidaiqualiscegliere)
                    {
                        <option value="@c.clt_Id">@c.clt_RagioneSociale</option>
                    }
                </select><br />
            </div>
            <div class="form-group">
                <label class="control-label">Latitudine:</label><br />
                <input type="text" id="impLat" pattern="^-?[0-9]{1,2}([,][0-9]{1,10})?" title="La latitudine puo assumere valori tra -90 e +90 con max 8 cifre significative dopo la virgola. Utilizzare solo la virgola" step="any" class="form-control" asp-for="@Model.imp.ipt_PosizioneLat" />
            </div>

            <div class="form-group">
                <label class="control-label">Longitudine:</label><br />
                <input type="text" pattern="^-?[0-9]{1,2}([,][0-9]{1,10})?" title="La latitudine puo assumere valori tra -90 e +90 con max 8 cifre significative dopo la virgola. Utilizzare solo la virgola" step="any" class="form-control" asp-for="@Model.imp.ipt_PosizioneLong" />
            </div>
            <div class="form-group" style="border-bottom: 1px solid black;">
                <label for="exampleSelect1">Regione:</label>
                <select class="form-control" asp-for="@Model.imp.ipt_Regione">
                    @foreach (var r in Model.regionidallequaliscegliere)
                    {
                        <option value="@r.rgn_Id">@r.rgn_Nome</option>
                    }
                </select><br />
            </div>

            <div class="form-group">
                <label class="control-label">Torcia:</label><br />
                <input type="text" class="form-control" maxlength="100" asp-for="@Model.imp.ipt_Torcia" />
            </div>
            <div class="form-group">
                <label class="control-label">Separatore:</label><br />
                <input type="text" class="form-control" maxlength="100" asp-for="@Model.imp.ipt_Separatore" />
            </div>
            <div class="form-group">
                <label class="control-label">Soffiante:</label><br />
                <input type="text" class="form-control" maxlength="100" asp-for="@Model.imp.ipt_Soffiante" />
            </div>
            <div class="form-group">
                <label class="control-label">Pompa:</label><br />
                <input type="text" class="form-control" maxlength="100" asp-for="@Model.imp.ipt_Pompa" />
            </div>
            <div class="form-group add">
                <button type="submit" class="btn btn-primary">Inserisci</button>
            </div>
        </div>
    </form>
</div>